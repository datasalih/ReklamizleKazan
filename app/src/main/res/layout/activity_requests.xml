<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.HyperSenGames.izleparakazan.Requests"
    android:orientation="vertical"
    android:background="#0D1324"
    >




        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"

            android:visibility="invisible">


            <TextView

                android:id="@+id/serialno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Talep #123DF133"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/requestname"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="-370dp"
                android:layout_marginTop="35dp"
                android:text="Ad: Salih Senova"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/requestamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-370dp"
                android:layout_marginTop="71dp"
                android:text="Tutar : 50TL"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/requestbank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-370dp"
                android:layout_marginTop="105dp"
                android:text="Banka Hesabı : TR9050325032055032"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/requestdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-370dp"
                android:layout_marginTop="140dp"
                android:text="Tarih : 1/10/2023"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/statustext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-370dp"
                android:layout_marginTop="170dp"
                android:text="Durum : "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="170dp"
                android:text=" Ödenmedi"
                android:textColor="@color/red"
                android:textSize="20dp" />


        </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Taleplerim"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:translationY="-2.07sp" />


    <TextView

        android:id="@+id/emptyrequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-20dp"
        android:gravity="center"
        android:text="Henüz Çekim Talebiniz Bulunmamaktadır...."
        android:textColor="#3D4660"
        android:textSize="26dp"
        android:visibility="visible" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#818181"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>

